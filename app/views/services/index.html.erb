<table>
    <thead>
        <tr>
            <th>nome</th>
            <th>valor</th>
            <th>duração</th>
            <th>descrição</th>
            <th>Editar</th>
            <th>ANIQUILAR</th>
        </tr>
    </thead>

    <tbody>
       <% @services.each do |s| %>
        <tr>
            <td><%= s.name %></td>
            <td><%= s.value %></td>
            <td><%= s.duration %> </td>
            <td><%= s.description %> </td>
            <td><%= link_to "Editar", edit_service_path(s) %></td>
            <td><%= link_to "ANIQUILAR", service_path(s), data:{turbo_method: :delete}%>  </td>
        </tr>
       <%end%>
    </tbody>
</table>

<%=link_to "Criar Serviço", new_service_path %> 